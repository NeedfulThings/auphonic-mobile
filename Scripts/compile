#!/bin/bash
DIR=$(cd `dirname $0` && pwd)
source $DIR/variables

rm -f $DIR/$AUPHONIC_OUTPUT/$AUPHONIC_CORDOVA_VERSION/*-*.js
echo "window.__APP_VERSION='$AUPHONIC_HASH';" > $DIR/$AUPHONIC_OUTPUT/$AUPHONIC_CORDOVA_VERSION/$AUPHONIC_VERSION_FILENAME
$DIR/modulr --watch --out "$DIR/$AUPHONIC_OUTPUT/$AUPHONIC_CORDOVA_VERSION/$AUPHONIC_JS_FILENAME" "App" --path "$DIR/$AUPHONIC_JS/:$DIR/$AUPHONIC_JS/Library:$DIR/$AUPHONIC_JS/Library/PowerTools:$DIR/$AUPHONIC_JS/Library/ThirdParty" -e "dev" $@
