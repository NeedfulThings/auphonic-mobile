@import 'nib'
@import 'Base/Reset'

vendor-prefixes = webkit official
support-for-ie = false

body
  background #fff url(../Images/Background.jpg)

@import 'UI/Core/Body'
@import 'UI/Core/Font'
@import 'UI/Core/Link'
@import 'UI/Core/Headline'
@import 'UI/Core/Container' // includes Header, Footer
@import 'UI/Core/Scroll'
@import 'UI/Core/Popover'
@import 'UI/Core/Notice'
@import 'UI/Core/Forms'
@import 'UI/Core/Button'
@import 'UI/Core/Pointer'
@import 'UI/Core/Transition'

@import 'UI/App/Content'
@import 'UI/App/Lists'
@import 'UI/App/Login'
@import 'UI/App/Retry'
@import 'UI/App/NullState'
@import 'UI/App/Player'
@import 'UI/App/AudioRecorder'
@import 'UI/App/SwipeAble'
@import 'UI/App/Spinner'

@import 'UI/App/Sprites'

@import 'UI/App/Details'

.light
  color $color-light

  .active &, .selected &
    color #fff

.placeholder
  color $color-placeholder

.small
  font-size 12px
  line-height 14px

.clear
  clear both

.clear-left
  clear left

.clear-right
  clear right

.center
  text-align center

.justify
  text-align justify

.bold
  font-weight bold

.small-logo
  background-image url('../Images/SmallLogo.png')
  background-position center
  background-size 100%
  background-repeat no-repeat

.logo
  margin 20px auto
  width 180px
  height 124px
  background-size 180px 124px
  background-image url('../Images/Logo.png')

@css {
  .hidden {
    display: none !important;
  }
}
