@import 'nib'
@import '../../mixin/expand'

div.login
  z-index 21
  expand()

  > form
    position absolute
    top 50%
    width 100%
    height 140px
    margin-top -70px

  > form > div
    width 90%
    margin 15px auto

  > form > div.formcontent
    margin 0 auto
    box-shadow 0 1px 3px rgba(0, 0, 0, 1)

    > div
      position relative

  input[type=text], input[type=password]
    font-size 1.3em
    box-sizing border-box

  input[type=text]
    border-bottom-left-radius 0
    border-bottom-right-radius 0
    border-bottom 1px solid #eee

  input[type=submit], a.register
    width 47%
    height 39px
    line-height 39px

  input[type=submit]
    float right

  // submit buttons and anchors have a few weird style differences
  a.register
    width 46%
    height 37px
    line-height 37px
    padding 0

  transition-property -webkit-transform
  transition-duration 500ms
  transform translate3d(0, 0, 0)

  &.fade
    transform translate3d(0, -100%, 0)
