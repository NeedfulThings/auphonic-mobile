@import 'nib'
@import '../../mixin/expand'

div.login
  z-index 21
  expand()

  transition-property opacity, transform
  transition-timing-function ease-in-out
  transition-delay 750ms
  transition-duration 250ms

  opacity 0

  &.show
    opacity 1

  > form
    position absolute
    width 100%
    height 140px

    .ios &
      top 50%
      margin-top -70px

    .android &
      bottom 25%

  > form > div
    margin 15px 0

  > form > div.formcontent
    margin 0 10px
    border-radius 4px

    > label
      display block
      position relative

  input[type=text], input[type=password]
    font-size 1.3em
    .ios &
      box-sizing border-box

  input[type=text]
    border-bottom-left-radius 0
    border-bottom-right-radius 0
    border-bottom 1px solid #eee

  input[type=submit], a.register
    width 42%
    height 39px
    line-height 39px
    margin 0 10px

  input[type=submit]
    float right

  a.no-login.button.expand
    margin-top 35px
    opacity 0.4

  .ios &
    transform translate3d(0, 0, 0)

  .ios &.fade
    transform translate3d(0, -100%, 0)
