@import 'nib'

@keyframes pulse {
  from {
    transform scale(1)
  }
  to {
    transform scale(1.05)
  }
}

.audio-recorder
  div.audio-level
    position relative
    height 40px
    margin -10px -10px 15px -10px

    background linear-gradient(left, #0f0 0%, #0f0 30%, #ff0 60%, #ff0 80%, #f00 100%)
    box-shadow 0 1px 2px rgba(0, 0, 0, 0.2)

    .peak-meter
      position absolute
      top 0
      bottom 0
      right 0
      width 100%
      background #fff

    .average-meter
      position absolute
      top 0
      bottom 0
      left 0
      width 0
      background rgba(0, 0, 0, 0.25)

    .stripes
      position absolute
      top 0
      bottom 0
      left 0
      right 0

  a.button.red.recorder
    display block
    width 150px
    height 150px
    padding 0
    margin 30px auto

    font-size 32px
    line-height 147px

    border-radius 50%
    box-shadow 0 0 5px rgba(0, 0, 0, 0.3)

    transition-property opacity
    transition-timing-function ease-in-out
    transition-duration 350ms
    opacity 1

    &.fade
      opacity 0

    &.pulse
      animation-name pulse
      animation-iteration-count infinite
      animation-timing-function ease-in-out
      animation-direction alternate
      animation-duration 1s

  a.add-chapter-mark
    span
      transition-timing-function ease-in-out
      transition-duration 350ms
      opacity 1

      &.out
        opacity 0
