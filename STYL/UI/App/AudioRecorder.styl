@import 'nib'

@keyframes pulse {
  from {
    transform scale(1)
  }
  to {
    transform scale(1.05)
  }
}

.audio-recorder
  position absolute
  top 0
  bottom 0
  left 0
  right 0

  .meter
    margin 0 0 15px 0
    box-shadow 0 1px 2px rgba(0, 0, 0, 0.2)
    background #fff

    div.audio-level
      position relative
      height 40px

      background linear-gradient(left, lime 0%, lime 30%, yellow 50%, yellow 70%, red 100%)
      box-shadow 0 1px 2px rgba(0, 0, 0, 0.2)

      .peak-meter
        position absolute
        top 0
        bottom 0
        right 0
        width 100%
        background #fff

      .average-meter
        position absolute
        top 0
        bottom 0
        left 0
        width 0
        background rgba(0, 0, 0, 0.25)

      .stripes
        position absolute
        top 0
        bottom 0
        left 0
        right 0

    div.scale
      position relative
      height 16px

      font-size 10px
      line-height 17px

      div
        position absolute
        left 0
        top 0
        bottom 0

        &.scale-48
          left 2%
        &.scale-42
          left 12.5%
        &.scale-36
          left 25%
        &.scale-30
          left 37.5%
        &.scale-24
          left 50%
        &.scale-18
          left 62.5%
        &.scale-12
          left 75%
        &.scale-6
          left 87.5%
        &.scale-0
          left 98%

  div.clipwarning
    width 100%
    text-align center
    font-size 20px
    font-weight bold
    color transparent

    &.clipping
      color black

  a.button.red
    margin-top 20px
    margin-bottom 40px

    &.recorder
      display block
      width 150px
      height 150px
      padding 0
      margin 10px auto 30px auto

      font-size 32px
      line-height 147px

      border-radius 50%
      box-shadow 0 0 5px rgba(0, 0, 0, 0.3)

      transition-property opacity
      transition-timing-function ease-in-out
      transition-duration 400ms
      opacity 1

    &.fade
      opacity 0

    &.pulse
      animation-name pulse
      animation-iteration-count infinite
      animation-timing-function ease-in-out
      animation-direction alternate
      animation-duration 1s

  a.button.save-recording
    display none

    &.paused
      display block

div.main ul.status
  z-index 11
  position absolute
  bottom 0
  left 0
  right 0

  &.expand
    margin 0

  &.out
    transform translate3d(0, 100%, 0)

  a.add-chapter-mark
    span
      transition-property opacity
      transition-timing-function ease-in-out
      transition-duration 400ms
      opacity 1

      &.out
        opacity 0

