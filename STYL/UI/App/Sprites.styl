a.arrow
  > span:first-child
    background-size 16px
    background-image url(../Images/Sprites/Arrow.png)

  &.active > span:first-child, &.selected > span:first-child
    background-image url(../Images/Sprites/ArrowWhite.png)

a.plus
  > span:first-child
    background-size 16px
    background-image url(../Images/Sprites/Plus.png)

  &.active > span:first-child, &.selected > span:first-child
    background-image url(../Images/Sprites/PlusWhite.png)

a.share
  > span:first-child
    background-size 16px
    background-image url(../Images/Sprites/Share.png)

  &.active > span:first-child, &.selected > span:first-child
    background-image url(../Images/Sprites/ShareWhite.png)


footer
  ul > li > a
    > span
      background-size 32px

    &.production > span
      background-image url(../Images/Sprites/Production.png)

    &.preset > span
      background-image url(../Images/Sprites/Preset.png)

    &.microphone > span
      background-image url(../Images/Sprites/Microphone.png)

    &.settings > span
      background-image url(../Images/Sprites/Settings.png)
