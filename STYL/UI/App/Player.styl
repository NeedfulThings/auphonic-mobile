@import 'nib'

.player
  .play-button
    float left
    border-radius 50%
    margin-right 10px
    background -webkit-radial-gradient(40% 40%, #fff, #c5c5c5)

    a
      display block
      width 35px
      height 35px

      background-repeat no-repeat
      background-position center center

  div.waveform
    position relative
    cursor pointer

    img
      border-radius 10px
      width 100%
      height 33px

    div.position
      position absolute
      left 0
      top 0
      bottom 0
      width 0

      border-radius 10px
      background rgba(0, 0, 0, 0.2)
