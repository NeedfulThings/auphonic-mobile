@import 'nib'

@import '../../mixin/expand'

div.splash
  z-index 20
  expand()

  transition-property transform
  transition-duration 350ms
  transform translate3d(0, 0, 0)

  background-repeat no-repeat

  .ios &
    background-size 100% 100%
    background-position center
    background-image url(./Splash.jpg)

  .android &
    background-size 80% auto
    background-color #efefef
    background-position center 10%
    background-image url(./Splash.png)

  .android &.hide
    background-image none

  &.fade
    transform translate3d(0, -100%, 0)

/* Target iPhone 4(S) and properly center the Splash */
@media only screen and (max-device-height: 960px) and (-webkit-min-device-pixel-ratio: 2) {
  .ios div.splash {
    -webkit-background-size: 100% 568px;
    -moz-background-size: 100% 568px;
    background-size: 100% 568px;
  }
}
