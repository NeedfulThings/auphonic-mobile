@import 'mixin/expand'

div.splash
  z-index 20
  expand()

  transition-property transform
  transition-duration 500ms
  transform translate3d(0, 0, 0)

  background-size cover
  background-repeat no-repeat
  background-image url(../Images/Splash.jpg)

  &.fade
    transform translate3d(0, -100%, 0)
