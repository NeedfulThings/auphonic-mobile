@import 'nib'

div.content, div.formcontent, div.container ul
  padding 10px
  margin 0 0 15px

  overflow hidden

  background #fff
  border-radius 5px
  box-shadow 0px 3px 8px #bcbcbc

div.formcontent, ul.formcontent
  padding 0
  transform translate3d(0, 0, 0) // iOS cuts of input elements if this is missing
