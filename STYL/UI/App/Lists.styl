@import 'nib'

@import '../Core/Font'

div.main ul
  padding 0
  font-size 16px

  border-top 1px solid #d9d9d9
  border-bottom 1px solid #d9d9d9

  > li:last-child
    border-bottom 0

  li
    position relative
    margin 0
    display block

    list-style-type none

    border-bottom 1px solid #d9d9d9

    &.no-border
      border-bottom 0

    a, label, .right
      ellipsis()
      text-decoration none
      display block
      padding 12px 10px

      .info-left
        display block
        margin-top 3px
        padding-right 24px
        line-height 15px
        ellipsis()

      .wrap
        width 83%
        height 1.15em
        display inline-block
        ellipsis()

    a
      color $color

      .ios &
        // Sometimes the .active state gets stuck on iOS. This fixes it. Bananas?
        transform translate3d(0, 0, 0)

      &.active, &.selected
        background-color #d9d9d9

    a, label
      &.arrow, &.plus, &.share, &.info
        padding-right 24px

        > span:first-child
          display inline-block
          float right
          width 16px
          height 16px
          margin-right -13px

          background-repeat no-repeat

        &.expanded > span:first-child
          height 32px
          background-position center

        &.swiped
          padding-right 80px

          > span:first-child
            margin-right -69px

          .info-left
            width 75%
            padding-right 0

    label.left
      .ios &
        width 30%

      .android &
        // This used to be 30 %. On Android, form elements are sometimes not focusable
        // if they are positioned outside of their container.
        width 100%

    .right
      position absolute
      left 32%
      right 0
      bottom 0
      top 0
      width auto
      font-weight normal

    span.right, a.right
      text-align right

    &.wide label.left
      width 65%

    &.wide .right
      left 67%

    &.wide-checkbox label.left
      width 70%

    &.wide-checkbox .right
      left 72%

    img.list-thumbnail
      float left
      width 35px
      height 35px
      margin 0 10px 0 0

      border-radius 50%

    &.transition-able
      overflow hidden

      transition-property border, opacity, height
      transition-timing-function ease-in-out
      transition-duration 350ms

      height 41px
      opacity 1

      .ios &
        transform translate3d(0, 0, 0)

      &.fade
        height 0
        opacity 0
        border 0
