@import 'nib'

@import 'UI/Core/Font'

img.thumbnail
  float left
  width 100px
  height 100px
  margin 0 10px 10px 0

  border-radius 5px
  box-shadow 0 1px 3px 0 rgba(0, 0, 0, 0.4)

img.waveform
  width 100%
  height 33px

.content.player
  float left
  border-radius 50%
  margin-right 10px

  a
    display block
    width 35px
    height 35px

    background-repeat no-repeat
    background-position center center

div.detail

  h1
    margin-left 0
    margin-bottom 5px

  span.album
    display block
    font-weight bold
    margin-bottom 5px
    overflow ellipsis

    font-size 13px
    text-transform uppercase

  span.artist
    display block
    overflow ellipsis
    line-height 14px

  span.track, span.year, span.genre
    float right

    color $color-light
    font-size 12px
    line-height 14px

  span.track
    padding 3px 0 0 3px
