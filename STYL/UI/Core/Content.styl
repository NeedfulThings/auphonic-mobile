@import 'nib'

div.container
  position absolute
  left 0
  right 0
  top 0
  bottom 40px

  div.panel-content
    padding 10px


  transition-property transform
  transition-duration 500ms
  transform translate3d(0, 0, 0)

  &.right
    transform translate3d(100%, 0, 0)

  &.left
    transform translate3d(-100%, 0, 0)

div.content, div.formcontent, ul
  padding 10px
  margin 0 0 15px

  overflow hidden

  background #fff
  border-radius 5px
  box-shadow 0px 3px 8px #bcbcbc

div.formcontent
  padding 0
