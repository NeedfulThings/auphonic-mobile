@import 'nib'
@import 'Font'

a
  cursor: pointer
  display inline-block
  padding 4px
  outline 0
  color $color-link
  text-decoration underline
  background transparent
  border 0
  border-radius 4px
  background-clip padding-box

  &:hover
    background $color-link
    text-decoration none
    color #fff
