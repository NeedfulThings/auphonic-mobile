@import 'Font'

.popover
  z-index 50
  position absolute
  left 10%
  right 10%

  padding 10px
  color #fff
  background #444
  border-radius 10px

  transition-property opacity, -webkit-transform
  transition-duration 250ms
  transition-timing-function cubic-bezier(.11,.99,.28,1.21)
  transform scale(1)
  opacity 1

  .ios &
    box-shadow 0 0 2px rgba(0, 0, 0, 0.4)

  &.white
    background #fff
    color $color

    &:before
      border-bottom-color rgba(255, 255, 255, 0.1)

    &:after
      border-bottom-color #fff

  h1:not(.header)
    margin 7px 0 7px 0
    margin-left 0
    margin-right 0
    color #fff
    text-align center
    text-shadow none
    overflow visible
    white-space normal
    line-height 1.4em

    &:first-child
      margin-top 0

    &:last-child
      margin-bottom 0

  .android & a.button.expand
    margin-left 0
    margin-right 0

  &.auto-width
    left auto
    right auto
    min-width 20px
    white-space nowrap
    text-overflow ellipsis

  &.fade
    opacity 0
    // Specificity fix
    .ios &
      transform scale(0)

  &:before, &:after
    left 50%
    bottom 100%
    border solid transparent
    content ""
    height 0
    width 0
    position absolute
    pointer-events none

  &:before
    margin-left -13px
    border-bottom-color rgba(0, 0, 0, 0.1)
    border-width 13px

  &:after
    margin-left -12px
    border-bottom-color #444
    border-width 12px

  &.top:before, &.top:after
    bottom auto
    top 100%

  &.top:before
    border-top-color rgba(0, 0, 0, 0.1)
    border-bottom-color transparent

  &.top:after
    border-bottom-color transparent
    border-top-color #444

  &.right
    left 30%
    right 1px

  &.right:before
    left 90.5%

  &.right:after
    left 90.5%

  // Necessary because of CSS specificity
  div.main &:not(.is-full-view) ul
    margin 0

    font-size 0.9em

    .android &
      border none
    border-radius 0
    background none
    box-shadow none

    li
      padding 3px
      overflow ellipsis
      border none
