.notice
  z-index 50
  position fixed
  left 0
  right 0
  top 44px

  padding 10px
  color #fff
  font-size 1.1em
  line-height 1.5em

  background #333
  border-bottom 1px solid #222

  transition-property opacity, -webkit-transform
  transition-duration 400ms
  transform scale(1) translate3d(0, -100%, 0)
  opacity 0

  h1
    margin-left 0
    margin-right 0
    color #fff
    text-align center
    text-shadow none

