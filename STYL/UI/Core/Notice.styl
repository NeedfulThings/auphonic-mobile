.notice
  z-index 50
  position fixed
  left 0
  right 0
  top 0

  padding 10px
  color #000
  font-size 1.1em
  line-height 1.5em

  background #ccc
  border-bottom 1px solid #aaa

  transition-property opacity, -webkit-transform, background
  transition-timing-function ease-in-out
  transition-duration 400ms
  transform translate3d(0, -100%, 0)
  opacity 0

  &.native
    display none
    opacity 1
    transform translate3d(0, 0, 0)

  &.highlight
    background #555

  h1
    margin-left 0
    margin-right -26px // This is nasty but if there is a headline we can assume the close button is below the headline
    color #000
    text-align center
    text-shadow none

  a
    color #e9e9e9

  .text
    padding-right 26px

  .close
    position absolute
    top 0
    right 10px
    bottom 0
    width 16px

    opacity 0.7
    background-position center
    background-repeat no-repeat
