@import 'nib'
@import 'Font'

input, textarea, select
  display block
  width 100%
  margin 0
  padding 11px 10px

  font-size 1em
  color $color
  font-family $font-ios
  outline none

  -webkit-appearance none
  border 0

  .ios &
    border-radius 4px // Needed so first/last elements don't overlay the container

  .android &
    font-family $font-android
    -webkit-user-modify read-write-plaintext-only

  div.main ul li &.right.clearable-visible
    padding-right 30px

div.clearable
  position absolute
  right 0
  top 0
  bottom 0
  width 27px
  background-position left center
  background-repeat no-repeat

textarea
  resize none
  padding 0
  width 100%

textarea.autogrow
    overflow-y hidden

// Checkbox, losely based on http://vxjs.org/switch.html
.checkbox
  width 60px
  margin-top -6px
  overflow hidden
  border 1px solid rgba(177, 177, 177, 0.5)

  .ios &
    border-radius 20px

  > div
    position relative
    height 28px
    width 62px

    overflow hidden

    .ios &
      border-radius 20px
      -webkit-mask-size 62px 28px

    input[type=checkbox]
      display none

    & > .left
      z-index 2
      position absolute
      top 0
      bottom 0
      left 0
      right 0

      transition -webkit-transform 200ms ease-in-out

      .ios &
        transform translate3d(-100%, 0, 0)
      .android &
        transform translate(-100%, 0)

      border-top-right-radius 0
      border-bottom-right-radius 0

      background-color #4cd864

    & > .thumb
      z-index 3
      position relative
      width 28px
      height 28px
      top -1px
      bottom -1px
      left -1px
      right -1px
      display block
      font-size 0.9em

      transition -webkit-transform 200ms ease-in-out
      .ios &
        transform translate3d(0, 0, 0)
      .android &
        transform translate(0, 0)

      border solid 1px rgba(151, 151, 151, 0.5)
      background-color #fff

      .ios &
        border-radius 50%
      .android &
        border-radius 0

      &:before
        content attr(data-on)
        position absolute
        top 7px
        left -58px
        right 0
        color #fff
        font-size 13px
        text-align center

        .android &
          top 8px
          left -60px

      &::after
        content attr(data-off)
        position absolute
        top 7px
        left 31px
        right 0
        color $color-light
        font-size 13px
        text-align center

        .android &
          top 8px
          left 32px

    &:hover > .thumb
      background-image none

// Select
select
  background transparent

select.empty
  opacity 0

div.main ul li span.right.placeholder
  pointer-events none
  text-align left

div.main ul li select.right
  height 41px // This is required for fade-out animations
  padding-top 0
  padding-bottom 0
