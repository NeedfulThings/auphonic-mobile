@import 'nib'
@import 'UI/Core/Font'

input, textarea, select
  display block
  width 100%
  margin 0
  padding 11px 10px

  &:last-child
    border-bottom 0

  font-size 1em
  color $color
  outline none

  border 0
  border-bottom 1px solid #eee
  border-radius 5px // Needed so first/last elements don't overlay the container
  -webkit-appearance none

textarea
  resize none
  padding-left 1%
  padding-right 1%
  width 96%

textarea.autogrow
    overflow-y hidden

// Buttons
.button, input[type=submit]
  display inline-block
  width auto

  color #fff
  font-size 13px
  font-weight bold
  text-align center
  text-decoration none
  padding 0em 0.5em
  cursor pointer
  text-shadow 0 1px 0 #333
  -webkit-appearance none

  border-radius 3px 3px 3px 3px
  border-style solid
  border-width 1px

  border-color #555 #555 #333
  background-color #555
  background-image  linear-gradient(center top, #666, #444)
  box-shadow inset 0 1px 0 rgba(255, 255, 255, 0.45)

  &.expand
    display block
    position relative
    left 0
    right 0
    padding 0
    line-height 35px
    height 35px

  &.small
    height 28px
    line-height 28px

  &.active, &.selected, .active &, .selected &
    border-color #444 #222 #222
    background-color #353535
    background-image linear-gradient(center top, #444, #222)

  &.red
    text-shadow 0 1px 0 #7B3737
    border-color #cd5c5c #cd5c5c #904040
    background-color #cd5c5c
    background-image linear-gradient(center top, #dc8d8d, #cd5c5c)

    &.active, &.selected, .active &, .selected &
      border-color #a44a4a #cd5c5c #cd5c5c
      background-color #dc8d8d
      background-image linear-gradient(center top, #a44a4a, #cd5c5c)
      box-shadow inset 0 2px 4px rgba(0, 0, 0, 0.45)

  &.gradient
    border-color #444 #222 #222
    background-color #666
    background-image linear-gradient(top, #666 0%, #444 50%, #333 51%, #333 100%)
    box-shadow inset 0 1px 0 rgba(0, 0, 0, 0.45)

    &.active, &.selected, .active &, .selected &
      border-color #444 #222 #222
      background-color #353535
      background-image linear-gradient(center top, #444 0%, #222 50%, #111 51%, #111 100%)
      box-shadow inset 0 2px 2px rgba(0, 0, 0, 0.45), 0 0 2px rgba(255, 255, 255, 0.2)

// Checkbox, losely based on http://vxjs.org/switch.html
.checkbox
  position relative
  float right
  height 28px
  width 77px
  border 1px solid #979797
  border-radius 20px
  margin-top -6px
  box-shadow inset 0 1px 3px #BABABA, inset 0 12px 3px 2px rgba(232, 232, 232, 0.5)
  cursor pointer
  overflow hidden

  input[type=checkbox]
    display none

  & > .left
    z-index 2
    position absolute
    top 0
    bottom 0
    left 0
    right 13px

    transition-duration 400ms
    transition-timing-function ease-in-out
    transform translate3d(0, 0, 0)

    border-radius 20px
    border-top-right-radius 0
    border-bottom-right-radius 0

    box-shadow inset 0 1px 2px #333, inset 0 12px 3px 2px rgba(104, 104, 104, 0.50)
    background-color #333

  & > .thumb
    z-index 3
    position relative
    width 26px
    height 26px
    top 0
    display block

    transition-duration 400ms
    transition-timing-function ease-in-out
    transform translate3d(0, 0, 0)

    border solid 1px #919191
    border-radius 28px

    box-shadow inset 0 2px 1px white, inset 0 -2px 1px white
    background-color #CECECE
    background-image linear-gradient(top, #CECECE, #FBFBFB)

    &:before
      content attr(data-on)
      position absolute
      top 4px
      left -67px
      right 0
      color #fff
      font-weight bold
      text-align center
      text-shadow rgba(0, 0, 0, 0.5) 0 -1px 0

    &::after
      content attr(data-off)
      position absolute
      top 4px
      left 33px
      right 0
      color #888
      text-align center
      font-weight bold

  &:hover > .thumb
    box-shadow inset 0 2px 1px #fff, inset 0 -2px 1px #fff
    background-image none

