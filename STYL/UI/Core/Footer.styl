@import 'nib'

$height = 40px

body
  margin-bottom $height + 15

footer
  z-index 10
  position absolute
  bottom 0
  left 0
  right 0
  overflow hidden
  height $height
  overflow hidden

  background-color #444
  background-image linear-gradient(top, #555 0%, #333 100%)
  border-bottom 1px solid rgba(0, 0, 0, 0.3)
  box-shadow rgba(0, 0, 0, 0.1) 0 2px 2px

  > a
    width 25%
    height $height

    float left
    display block

    text-decoration none

    > span
      display block
      height 40px
      background-position center center
      background-repeat no-repeat

    &.active
      background-image linear-gradient(top, #333 0%, #111 100%)
      border-top 2px solid #cd5c5c
      box-shadow inset 0 20px 20px -20px rgba(255, 255, 255, 0.2)

    &.selected
      background-image linear-gradient(top, #333 0%, #111 100%)
      border-top 2px solid #cd5c5c
