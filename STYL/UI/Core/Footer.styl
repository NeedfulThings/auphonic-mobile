@import 'nib'
@import 'Font'
@import 'Header'

$footer-height = 44px

footer
  box-sizing border-box
  position absolute
  left 0
  right 0
  height $footer-height

  .ios &
    bottom 0

  .android &
    position fixed
    top $header-height - 2px // Account for missing header border-top style

  transition-property -webkit-transform, opacity, height
  transition-timing-function ease-out
  transition-duration 350ms

  .ios &
    transform translate3d(0, 0, 0)
  .android &
    transform translate(0, 0)
  opacity 1

  &.out
    .ios &
      transform translate3d(0, 100%, 0)
    opacity 0
    height 0

  &.left
    .android &
      transform translate(-100%, 0)

  z-index 10
  overflow hidden
  background-color #f7f7f7

  .ios &
    border-top #d7d7d7 1px solid

  .android &
    border-bottom #d7d7d7 1px solid

  ul
    margin 0
    padding 0

    li
      display block
      float left
      width 25%

      list-style-type none

      > a
        position relative
        display block
        height $footer-height

        text-decoration none

        > span:first-child
          display block
          height $footer-height
          background-position center 4px
          background-repeat no-repeat
          opacity 0.95

        > span:last-child
          position absolute
          left 0
          right 0
          bottom 4px

          color #929292
          font-family $font-ios
          text-align center
          font-weight 500
          font-size 10px

        &.selected > span:last-child
          color $color-link
