@import 'nib'

$footer-height = 40px

footer
  z-index 10
  position absolute
  bottom -1px // huh?
  left 0
  right 0
  overflow hidden
  height $footer-height
  overflow hidden

  background-color #444
  background-image linear-gradient(top, #555 0%, #333 100%)
  border-bottom 1px solid rgba(0, 0, 0, 0.3)
  box-shadow rgba(0, 0, 0, 0.1) 0 2px 2px

  ul
    margin 0
    padding 0

    li
      display block
      float left
      width 25%
      list-style-type none

      > a
        display block
        height $footer-height

        text-decoration none

        &.active
          background-image linear-gradient(top, #333 0%, #111 100%)
          border-top 2px solid #cd5c5c
          box-shadow inset 0 20px 20px -20px rgba(255, 255, 255, 0.2)

        &.selected
          background-image linear-gradient(top, #333 0%, #111 100%)
          border-top 2px solid #cd5c5c

        > span
          display block
          height $footer-height
          background-position center center
          background-repeat no-repeat
