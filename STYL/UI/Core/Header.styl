@import 'nib'

$header-height = 40px
$headline-offset = 2px

header
  z-index 10
  position absolute
  top 0
  left 0
  right 0
  overflow hidden
  height $header-height
  overflow hidden

  background-color #444
  background-image linear-gradient(top, #555 0%, #333 100%)
  border-bottom 1px solid rgba(0, 0, 0, 0.3)
  box-shadow rgba(0, 0, 0, 0.1) 0 2px 2px

  h1
    position relative
    margin 0
    padding 0
    height $header-height - (2 * $headline-offset)
    line-height $header-height - (2 * $headline-offset)
    color rgba(0, 0, 0, 0.3)
    text-align center
    font-size 1.4em
    font-weight bold

    &:before
      position absolute
      top $headline-offset
      left 0
      right 0
      text-align center
      content attr(title)
      color rgba(255, 255, 255, 1)

  a
    z-index 11
    position absolute
    top 0
    bottom 0

    transition-duration 400ms
    transition-property opacity, -webkit-transform

    opacity 0
    transform translate3d(50px, 0, 0)

    &.show
      opacity 1
      transform translate3d(0, 0, 0)

    text-decoration none

    &.button-left
      left 10px

    &.button-right
      left 10px

    .button
      position absolute
      top 5px
      bottom 5px
      height $header-height - 10px
      line-height $header-height - 10px

      display block
      padding 0 0.5em
      min-width auto

