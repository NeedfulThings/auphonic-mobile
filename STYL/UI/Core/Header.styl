@import 'nib'

div.header
  z-index 10
  position fixed
  top 0
  left 0
  right 0
  overflow hidden
  height 25px
  overflow hidden

  background-color #f2f5f6
  background-image linear-gradient(top, #f2f5f6 0%, #e5e8e9 100%)
  border-bottom 1px solid rgba(0, 0, 0, 0.3)
  box-shadow rgba(0, 0, 0, 0.1) 0 2px 2px
