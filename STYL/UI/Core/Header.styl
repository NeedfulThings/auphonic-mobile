@import 'nib'
@import 'mixin/ellipsis'

$header-height = 40px
$headline-offset = 2px

header
  z-index 10
  position absolute
  top 0
  left 0
  right 0
  overflow hidden
  height $header-height
  overflow hidden

  background-color #444
  background-image linear-gradient(top, #555 0%, #333 100%)
  border-bottom 1px solid rgba(0, 0, 0, 0.3)
  box-shadow rgba(0, 0, 0, 0.1) 0 2px 2px

  h1
    top 0
    left 65px
    right 65px

    position absolute
    margin 0
    padding 0
    height $header-height - (2 * $headline-offset)
    line-height $header-height - (2 * $headline-offset)
    color rgba(0, 0, 0, 0.3)
    text-align center
    font-size 1.3em
    font-weight bold

    &:before
      position absolute
      top $headline-offset
      left 0
      right 0

      content attr(title)
      color rgba(255, 255, 255, 1)
      text-align center

    transition-property opacity, -webkit-transform
    transition-timing-function ease-in-out
    transition-duration 400ms
    opacity 1
    transform translate3d(0, 0, 0)

    &.right
      opacity 0
      transform translate3d(100%, 0, 0)

    &.left
      opacity 0
      transform translate3d(-100%, 0, 0)


  a
    z-index 11
    position absolute
    top 0
    bottom 0

    transition-property opacity, -webkit-transform
    transition-timing-function ease-in-out
    transition-duration 400ms

    opacity 0
    transform translate3d(50px, 0, 0)

    &.show
      opacity 1
      transform translate3d(0, 0, 0)

    text-decoration none

    &.button-left
      left 5px

    &.button-right
      left 5px

    .button
      position absolute
      top 5px
      bottom 5px
      width 55px
      height $header-height - 10px
      line-height $header-height - 10px

      display block
      padding 0
      min-width auto

