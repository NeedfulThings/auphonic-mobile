@import 'nib'
@import 'Header'
@import 'Footer'

div.container
  position absolute
  left 0
  right 0
  top $header-height
  bottom $footer-height

  div.scroll-content
    padding 10px

  transition-property -webkit-transform, opacity
  transition-timing-function ease-in-out
  transition-duration 400ms
  transform translate3d(0, 0, 0)

  &.white
    background #fff

  &.right
    transform translate3d(100%, 0, 0)

  &.left
    transform translate3d(-100%, 0, 0)

  &.fade
    opacity 0
