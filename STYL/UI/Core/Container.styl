@import 'nib'
@import 'UI/Core/Header'
@import 'UI/Core/Footer'

div.container
  position absolute
  left 0
  right 0
  top $header-height
  bottom $footer-height

  div.panel-content
    padding 10px

  transition-property transform
  transition-duration 400ms
  transform translate3d(0, 0, 0)

  &.right
    transform translate3d(100%, 0, 0)

  &.left
    transform translate3d(-100%, 0, 0)
