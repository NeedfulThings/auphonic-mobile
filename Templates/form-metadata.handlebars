<ul class="formcontent">
  <li>
    <label class="left"><input type="text" name="metadata.title" class="right" data-clearable="1" />Title</label>
  </li>
  <li>
    <label class="left"><input type="text" name="metadata.album" class="right" />Album</label>
  </li>
  <li>
    <label class="left"><input type="text" name="metadata.artist" class="right" />Artist</label>
  </li>
  <li>
    <label class="left"><input type="text" pattern="[0-9]*" name="metadata.track" class="right" />Track</label>
  </li>
</ul>

<h1>Cover Photo</h1>
<img src="{{{image thumbnail}}}" class="thumbnail{{#unless thumbnail}} hidden{{/unless}}" />
<ul>
  <li class="upload-cover-photo-list{{#unless thumbnail}} no-border{{/unless}}">
    <label class="upload-cover-photo show-popover plus">
      <span></span>
      Upload
      <div class="hidden popover top justify" data-position="top">
        <a href="#" class="button expand upload_take_photo">Take a Photo</a>
        <a href="#" class="button expand upload_from_library">Choose from Library</a>
      </div>
    </label>
  </li>
  <li class="remove_thumbnail{{#unless thumbnail}} hidden{{/unless}}">
    <a href="#">Remove</a>
  </li>
</ul>

{{#if withLocation}}
  <h1 class="clear">Location</h1>
  <ul class="location-add{{#if location.longitude}} hidden{{/if}}">
    <li>
      <label class="plus">
        <span></span>
        <span class="location-add-text">Add Current Location</span>
      </label>
    </li>
  </ul>
  <ul class="location-detail{{#unless location.longitude}} hidden{{/unless}}">
    <li>
      <label class="location-detail-popover show-popover info">
        <span></span>
        <span class="location-detail" data-latitude="{{location.latitude}}" data-longitude="{{location.longitude}}"></span>
        <div class="hidden popover top justify" data-position="top" data-highlight-text="1">
          <h1></h1>
          <a href="#" class="button expand location-remove">Remove location</a>
        </div>
      </label>
    </li>
  </ul>
{{/if}}

<h1 class="clear">Details</h1>
<ul class="formcontent">
  <li>
    <label class="left"><input type="text" name="metadata.genre" class="right" />Genre</label>
  </li>
  <li>
    <label class="left"><input type="tel" name="metadata.year" class="right" data-clearable="1" />Year</label>
  </li>
  <li>
    <label class="left"><input type="text" name="metadata.publisher" class="right" />Publisher</label>
  </li>
  <li>
    <label class="left"><input type="url" name="metadata.url" class="right" autocapitalize="off" />URL</label>
  </li>
  <li>
    <label class="left"><input type="text" name="metadata.license" placeholder="License etc." class="right" />Copyright</label>
  </li>
  <li>
    <label class="left"><input type="url" name="metadata.license_url" placeholder="URL" autocapitalize="off" class="right" />License</label>
  </li>
  <li>
    <label class="left"><input type="text" name="metadata.tags" placeholder="comma separated" class="right" />Tags</label>
  </li>
  <li class="wide-checkbox">
    <label class="left">
      <div class="right">
        <div class="checkbox">
          <div>
            <span class="left"></span><span class="thumb" data-on="YES" data-off="NO"></span>
            <input type="checkbox" name="metadata.append_chapters" value="1" />
          </div>
        </div>
      </div>
      Append Chapters
    </label>
  </li>
</ul>

<h1>Subtitle <small>(max 255 characters)</small></h1>
<ul class="formcontent">
  <li><label><textarea class="autogrow" name="metadata.subtitle" maxlength="255"></textarea></label></li>
</ul>
<h1>Summary</h1>
<ul class="formcontent">
  <li><label><textarea class="autogrow" name="metadata.summary"></textarea></label></li>
</ul>
