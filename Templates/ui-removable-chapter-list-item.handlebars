<li class="swipeable show-popover" data-popover-open-event="touchhold">
  <span class="right removable">
    <span><a class="button red small">{{label}}</a></span>
  </span>
  <div class="hidden popover top justify" data-position="top">
    <a class="button expand red deleteable">{{label}}</a>
  </div>
  {{#if chapter-is-playable}}<span class="play-chapter play" data-start="{{start}}"></span>{{/if}}
  <a href="{{href}}" class="arrow"><span></span><small class="light">{{start}}</small> {{title}}</a>
</li>
